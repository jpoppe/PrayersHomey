{
    "id": "com.prayerssapp",
    "version": "0.0.1",
    "compatibility": " >=2.0.0",
    "sdk": 2,
    "brandColor": "#2698DD",
    "name": {
        "en": "Prayers Alert"
    },
    "description": {
        "en": "Trigger muslim prayers timing events based on your locations"
    },
    "category": "tools",
    "tags": {
        "en": [
            "prayer",
            "prayers",
            "muslim",
            "timing",
            "time"
        ]
    },
    "images": {
        "large": "assets/images/large.jpg",
        "small": "assets/images/small.jpg"
    },
    "permissions": [
        "homey:manager:speech-output",
        "homey:manager:geolocation"
    ],
    "author": {
        "email": "dpanet@hotmail.com",
        "name": "Omar"
    },
    "bugs": {
        "url": "https://github.com/DPANET/PrayersHomey/issues"
    },
    "flow": {
        "triggers": [
            {
                "id": "prayer_trigger_specific",
                "title": {
                    "en": "Trigger to specific prayer time"
                },
                "tokens": [
                    {
                        "name": "prayer_name",
                        "type": "string",
                        "title": {
                            "en": "Prayer Name"
                        }
                    },
                    {
                        "name": "prayer_time",
                        "type": "string",
                        "title": {
                            "en": "Prayer Time"
                        }
                    }
                ],
                "args": [
                    {
                        "type": "dropdown",
                        "name": "prayers_dropdown",
                        "values": [
                            {
                                "id": "FAJR",
                                "label": {
                                    "en": "Fajr"
                                }
                            },
                            {
                                "id": "DHUR",
                                "label": {
                                    "en": "Dhur"
                                }
                            },
                            {
                                "id": "ASR",
                                "label": {
                                    "en": "Asr"
                                }
                            },
                            {
                                "id": "MAGHRIB",
                                "label": {
                                    "en": "Maghrib"
                                }
                            },
                            {
                                "id": "Isha",
                                "label": {
                                    "en": "Isha"
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "id": "prayer_trigger_all",
                "title": {
                    "en": "Trigger to all prayers event"
                },
                "tokens": [
                    {
                        "name": "prayer_name",
                        "type": "string",
                        "title": {
                            "en": "Prayer Name"
                        }
                    },
                    {
                        "name": "prayer_time",
                        "type": "string",
                        "title": {
                            "en": "Prayer Time"
                        }
                    }
                ]
            }
        ],
        "actions": [
            {
                "id": "athan_action",
                "title": {
                    "en": "Play athan sound based on action"
                },
                "args": [
                    {
                        "type": "dropdown",
                        "name": "athan_dropdown",
                        "values": [
                            {
                                "id": "athan_short",
                                "label": {
                                    "en": "Play first part of the athan"
                                }
                            },
                            {
                                "id": "athan_full",
                                "label": {
                                    "en": "Play athan fully "
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
